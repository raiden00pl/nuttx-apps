#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

menuconfig NXSCOPE_SENSORS
	bool "NxScope sensros app"
	default n
	select LOGGING_NXSCOPE_INTF_SERIAL
	select LOGGING_NXSCOPE_PROTO_SER

if NXSCOPE_SENSORS

config NXSCOPE_SENSORS_PROGNAME
	string "Program name"
	default "nxscope"

config NXSCOPE_SENSORS_PRIORITY
	int "nxscope task priority"
	default 100

config NXSCOPE_SENSORS_STACKSIZE
	int "nxscope stack size"
	default DEFAULT_TASK_STACKSIZE

config NXSCOPE_SENSORS_SERIAL_PATH
	string "nxscope serial path"
	default "/dev/ttyUSB0"

config NXSCOPE_SENSORS_SERIAL_BAUD
	int "nxscope serial baud"
	default 115200
	---help---
		Ignored if set to 0 (for example for RTT interface)

config NXSCOPE_SENSORS_CDCACM
	bool "nxscope CDCACM device support"
	depends on CDCACM
	default n

config NXSCOPE_SENSORS_FORCE_ENABLE
	bool "nxscope force enable"
	default n

config NXSCOPE_SENSORS_STREAMBUF_LEN
	int "nxscope stream buffer length"
	default 512

config NXSCOPE_SENSORS_RXBUF_LEN
	int "nxscope RX buffer length"
	default 32

config NXSCOPE_SENSORS_RX_PADDING
	int "nxscope RX padding"
	default 0

config NXSCOPE_SENSORS_MAIN_INTERVAL
	int "nxscope main interval (microseconds)"
	default 100000
	---help---
		This value is responsible for the frequency at which stream
		frames will be sent and incoming frames will be received.

config NXSCOPE_SENSORS_FETCH_INTERVAL
	int "nxscope sensor fetch interval (microseconds)"
	default 1000
	---help---
		This value is responsible for the frequency at which the sensors
		are read

endif # NXSCOPE_SENSORS